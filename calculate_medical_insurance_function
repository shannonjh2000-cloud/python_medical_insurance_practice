# Quitting smoking can lower the cost of insurance. Calculate insurance costs and show smokers how they can lower costs
def analyse_smoker(smoker_status):
   if smoker_status == 1:
   print("To lower your cost, you should consider quitting smoking. ")
   else:
      print ("Smoking is not the issue for you")

# New calculate_insurance_cost() function
def calculate_insurance_cost(name, age, sex, bmi, num_of_children, smoker):
  estimated_cost = 250*age - 128*sex + 370*bmi + 425*num_of_children + 24000*smoker - 12500
  print ("The estimated insurance cost for " + name + " is " + "dollars")
  analyse_smoker(smoker)
  return estimated_cost

# Initial variables for Suzanne (sex:  0 = female, 1 = male) (smoker: 0 = non-smoker, 1 smoker)
# name = Suzanne
# age = 35
# sex = 0
# bmi = 26.4
# num_of_children = 3
# smoker = 0

